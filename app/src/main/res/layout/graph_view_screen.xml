<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F6F5F5">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="78dp"
        android:layout_marginTop="33dp"
        android:layout_marginEnd="32dp"
        android:text="BLOOD PRESSURE HISTORY"
        android:textColor="#000000"
        android:textSize="24sp"
        android:fontFamily="@font/rasa_bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/graph_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="78dp"
        android:layout_marginTop="66dp"
        android:layout_marginEnd="215dp"
        android:text="GRAPH VIEW"
        android:textColor="#9B64FF"
        android:textSize="20sp"
        android:fontFamily="@font/rasa_bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="410dp"
        android:layout_height="62dp"
        android:layout_marginTop="121dp"
        android:layout_marginEnd="1dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.chip.Chip
            android:id="@+id/chip1_card"
            style="@style/Widget.MaterialComponents.Chip.Choice"
            android:layout_width="120dp"
            android:layout_height="45dp"
            android:checkable="true"
            android:text="Sodium"
            android:textAlignment="center"
            android:textColor="@color/chip_text_color"
            android:textSize="16dp"
            app:checkedIconEnabled="true"
            app:checkedIconTint="@color/white"
            app:checkedIconVisible="true"
            app:chipBackgroundColor="@color/chip_background_color"
            app:chipEndPadding="10dp"
            app:chipIconVisible="true"
            app:chipMinHeight="40dp"
            app:chipMinTouchTargetSize="40dp"
            app:chipStartPadding="10dp" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chip2_card"
            style="@style/Widget.MaterialComponents.Chip.Choice"
            android:layout_width="110dp"
            android:layout_height="45dp"
            android:checkable="true"
            android:text="Stress"
            android:textAlignment="center"
            android:textColor="@color/chip_text_color"
            android:textSize="16dp"
            app:checkedIconEnabled="true"
            app:checkedIconTint="@color/white"
            app:checkedIconVisible="true"
            app:chipBackgroundColor="@color/chip_background_color"
            app:chipEndPadding="10dp"
            app:chipIconVisible="true"
            app:chipMinHeight="40dp"
            app:chipMinTouchTargetSize="40dp"
            app:chipStartPadding="10dp" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chip3_card"
            style="@style/Widget.MaterialComponents.Chip.Choice"
            android:layout_width="170dp"
            android:layout_height="45dp"
            android:checkable="true"
            android:text="Heavy Exercise"
            android:textAlignment="center"
            android:textColor="@color/chip_text_color"
            android:textSize="16dp"
            app:checkedIconEnabled="true"
            app:checkedIconTint="@color/white"
            app:checkedIconVisible="true"
            app:chipBackgroundColor="@color/chip_background_color"
            app:chipEndPadding="10dp"
            app:chipIconVisible="true"
            app:chipMinHeight="40dp"
            app:chipMinTouchTargetSize="40dp"
            app:chipStartPadding="10dp" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="410dp"
        android:layout_height="640dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="204dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <include
            android:id="@+id/graph"
            layout="@layout/graph"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />

        <include
            android:id="@+id/bp_level_table"
            layout="@layout/bp_level_table"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom" />

    </LinearLayout>

    <Button
        android:id="@+id/back_button"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="#F6F5F5"
        app:icon="@drawable/ic_baseline_arrow_back_ios_24"
        app:iconTint="#000000"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>