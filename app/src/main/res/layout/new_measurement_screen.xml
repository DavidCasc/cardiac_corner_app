<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F6F5F5"
    tools:context=".NewMeasurementActivity">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="223dp"
        android:layout_height="234dp"
        android:layout_marginTop="135dp"
        android:layout_marginBottom="496dp"
        android:gravity="center"
        android:src="@drawable/circle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/diastolic"
        android:layout_width="210dp"
        android:layout_height="90dp"
        android:layout_marginStart="100dp"
        android:layout_marginTop="260dp"
        android:layout_marginEnd="101dp"
        android:background="#00FFFFFF"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="60sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="210dp"
        android:layout_height="46dp"
        android:layout_marginStart="100dp"
        android:layout_marginTop="212dp"
        android:layout_marginEnd="101dp"
        android:text="- - - - -"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="48sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/systolic"
        android:layout_width="210dp"
        android:layout_height="90dp"
        android:layout_marginStart="100dp"
        android:layout_marginTop="156dp"
        android:layout_marginEnd="101dp"
        android:background="#00FFFFFF"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="60sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="297dp"
        android:layout_height="51dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/rasa_bold"
        android:gravity="center"
        android:text="NEW MEASUREMENT"
        android:textColor="#000000"
        android:textSize="26sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/notes_textbox"
        android:layout_width="250dp"
        android:layout_height="123dp"
        android:ems="10"
        android:gravity="top|left"
        android:textColor="#000000"
        android:inputType="textMultiLine"
        android:lines="6"
        android:maxLines="6"
        android:minLines="3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/notes" />

    <TextView
        android:id="@+id/notes"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_marginTop="12dp"
        android:background="#ffb2a4"
        android:text="NOTES"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="410dp"
        android:layout_height="62dp"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/diastolic">

        <com.google.android.material.chip.Chip
            android:id="@+id/chip1_card"
            style="@style/Widget.MaterialComponents.Chip.Choice"
            android:layout_width="120dp"
            android:layout_height="45dp"
            android:checkable="true"
            android:text="Sodium"
            android:textAlignment="center"
            android:textColor="@color/chip_text_color"
            android:textSize="16dp"
            app:checkedIconEnabled="true"
            app:checkedIconTint="@color/white"
            app:checkedIconVisible="true"
            app:chipBackgroundColor="@color/chip_background_color"
            app:chipEndPadding="10dp"
            app:chipIconVisible="true"
            app:chipMinHeight="40dp"
            app:chipMinTouchTargetSize="40dp"
            app:chipStartPadding="10dp" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chip2_card"
            style="@style/Widget.MaterialComponents.Chip.Choice"
            android:layout_width="110dp"
            android:layout_height="45dp"
            android:checkable="true"
            android:text="Stress"
            android:textAlignment="center"
            android:textColor="@color/chip_text_color"
            android:textSize="16dp"
            app:checkedIconEnabled="true"
            app:checkedIconTint="@color/white"
            app:checkedIconVisible="true"
            app:chipBackgroundColor="@color/chip_background_color"
            app:chipEndPadding="10dp"
            app:chipIconVisible="true"
            app:chipMinHeight="40dp"
            app:chipMinTouchTargetSize="40dp"
            app:chipStartPadding="10dp" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chip3_card"
            style="@style/Widget.MaterialComponents.Chip.Choice"
            android:layout_width="170dp"
            android:layout_height="45dp"
            android:checkable="true"
            android:text="Heavy Exercise"
            android:textAlignment="center"
            android:textColor="@color/chip_text_color"
            android:textSize="16dp"
            app:checkedIconEnabled="true"
            app:checkedIconTint="@color/white"
            app:checkedIconVisible="true"
            app:chipBackgroundColor="@color/chip_background_color"
            app:chipEndPadding="10dp"
            app:chipIconVisible="true"
            app:chipMinHeight="40dp"
            app:chipMinTouchTargetSize="40dp"
            app:chipStartPadding="10dp" />

    </LinearLayout>

    <Button
        android:id="@+id/continue_button"
        android:layout_width="140dp"
        android:layout_height="50dp"
        android:layout_marginStart="255dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:backgroundTint="#9B64FF"
        android:text="Continue"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/back_button"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="#F6F5F5"
        app:icon="@drawable/ic_baseline_arrow_back_ios_24"
        app:iconTint="#000000"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>