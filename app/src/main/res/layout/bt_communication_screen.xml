<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#A1D2F4">

    <TextView
        android:id="@+id/warning_msg"
        android:layout_width="280dp"
        android:layout_height="80dp"
        android:background="#cccccc"
        android:fontFamily="@font/rasa_bold"
        android:text="Warning: Before taking a new measurement, it is advised not to do heavy exercise or eat 30 minutes beforehand"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="17sp"
        app:layout_constraintBottom_toTopOf="@+id/manualEntryBtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="160dp"
        android:src="@drawable/red_rectangle_shape"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/manualEntryBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:width="250dp"
        android:backgroundTint="#673AB7"
        android:fontFamily="@font/rasa_bold"
        android:text="Manual Entry"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <Button
        android:id="@+id/startBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:width="250dp"
        android:backgroundTint="#673AB7"
        android:fontFamily="@font/rasa_bold"
        android:text="Collect Measurement"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/manualEntryBtn" />

    <TextView
        android:id="@+id/infoBox"
        android:layout_width="340dp"
        android:layout_height="280dp"
        android:background="#ff9898"
        android:fontFamily="@font/rasa_bold"
        android:text="1. Please fasten the blood pressure monitor to your wrist.\n\n2. Press the 'On/Off' button on device to start measurement.\n\n3. Once the measurement is complete, press 'On/Off' on the blood pressure monitor for the measurement to be transmitted. \n\n4. Once transmitted, press 'Collect Measurement' button below \n\nHaving trouble connecting? Please use the manual entry."
        android:textAlignment="textStart"
        android:textColor="@color/black"
        android:textSize="18dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView"
        app:layout_constraintEnd_toEndOf="@+id/imageView"
        app:layout_constraintHorizontal_bias="0.485"
        app:layout_constraintStart_toStartOf="@+id/imageView"
        app:layout_constraintTop_toTopOf="@+id/imageView" />
</androidx.constraintlayout.widget.ConstraintLayout>