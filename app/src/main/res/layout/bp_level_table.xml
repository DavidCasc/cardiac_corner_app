<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="250dp">

    <LinearLayout
        android:layout_width="291dp"
        android:layout_height="240dp"
        android:layout_gravity="center"
        android:layout_marginTop="6dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/colour"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="6dp"
                android:text="Colour"
                android:textColor="#000000"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_column="0"
                app:layout_row="0" />

            <TextView
                android:id="@+id/bp_level"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="18dp"
                android:layout_marginTop="6dp"
                android:text="BP Level"
                android:textColor="#000000"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_column="1"
                app:layout_row="0" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="26dp"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/colour1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="6dp"
                android:background="#4575b4"
                android:text="           "
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_column="0"
                app:layout_row="1" />


            <TextView
                android:id="@+id/hypotension"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="26dp"
                android:layout_marginTop="6dp"
                android:text="Hypotension"
                android:textColor="#000000"
                android:textSize="16sp"
                app:layout_column="1"
                app:layout_row="1" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="26dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/colour2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="6dp"
                android:background="#91bfdb"
                android:text="           "
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_column="0"
                app:layout_row="2" />

            <TextView
                android:id="@+id/desired"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="26dp"
                android:layout_marginTop="6dp"
                android:text="Desired"
                android:textColor="#000000"
                android:textSize="16sp"
                app:layout_column="1"
                app:layout_row="2" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="26dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/colour3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="6dp"
                android:background="#e0f3f8"
                android:text="           "
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_column="0"
                app:layout_row="3" />

            <TextView
                android:id="@+id/prehypertension"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="26dp"
                android:layout_marginTop="6dp"
                android:text="Prehypertension"
                android:textColor="#000000"
                android:textSize="16sp"
                app:layout_column="1"
                app:layout_row="3" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="26dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/colour4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="6dp"
                android:background="#fee090"
                android:text="           "
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_column="0"
                app:layout_row="4" />

            <TextView
                android:id="@+id/stage1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="26dp"
                android:layout_marginTop="6dp"
                android:text="Stage 1 hypertension"
                android:textColor="#000000"
                android:textSize="16sp"
                app:layout_column="1"
                app:layout_row="4" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="26dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/colour5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="6dp"
                android:background="#fc8d59"
                android:text="           "
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_column="0"
                app:layout_row="5" />

            <TextView
                android:id="@+id/stage2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="26dp"
                android:layout_marginTop="6dp"
                android:text="Stage 2 hypertension"
                android:textColor="#000000"
                android:textSize="16sp"
                app:layout_column="1"
                app:layout_row="5" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="26dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/colour6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="6dp"
                android:background="#d73027"
                android:text="           "
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_column="0"
                app:layout_row="6" />

            <TextView
                android:id="@+id/hypertensive_emerg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="26dp"
                android:layout_marginTop="6dp"
                android:text="Hypertensive emergency"
                android:textColor="#000000"
                android:textSize="16sp"
                app:layout_column="1"
                app:layout_row="6" />

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>