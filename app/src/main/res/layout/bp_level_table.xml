<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="200dp">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TableRow>

            <TextView
                android:id="@+id/colour"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="6dp"
                android:text="Colour"
                android:textColor="#000000"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_column="0"
                app:layout_row="0" />

            <TextView
                android:id="@+id/systolic_level"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="6dp"
                android:text="Systolic"
                android:textColor="#000000"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_column="1"
                app:layout_row="0" />

            <TextView
                android:id="@+id/diastolic_level"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="6dp"
                android:text="Diastolic"
                android:textColor="#000000"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_column="1"
                app:layout_row="0" />

            <TextView
                android:id="@+id/bp_level"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="6dp"
                android:text="BP Level"
                android:textColor="#000000"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_column="1"
                app:layout_row="0" />

        </TableRow>

        <TableRow>

            <TextView
                android:id="@+id/colour1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="6dp"
                android:background="#4575b4"
                android:text="           "
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_column="0"
                app:layout_row="1" />

            <TextView
                android:id="@+id/range1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="6dp"
                android:text="&lt;90"
                android:textColor="#000000"
                android:textSize="14sp"
                app:layout_column="1"
                app:layout_row="1" />

            <TextView
                android:id="@+id/range2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="6dp"
                android:text="&lt;60"
                android:textColor="#000000"
                android:textSize="14sp"
                app:layout_column="1"
                app:layout_row="1" />

            <TextView
                android:id="@+id/hypotension"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="6dp"
                android:text="Hypotension"
                android:textColor="#000000"
                android:textSize="14sp"
                app:layout_column="1"
                app:layout_row="1" />

        </TableRow>

        <TableRow>

            <TextView
                android:id="@+id/colour2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="6dp"
                android:background="#91bfdb"
                android:text="           "
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_column="0"
                app:layout_row="1" />

            <TextView
                android:id="@+id/range3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="6dp"
                android:text="90-119"
                android:textColor="#000000"
                android:textSize="14sp"
                app:layout_column="1"
                app:layout_row="1" />

            <TextView
                android:id="@+id/range4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="6dp"
                android:text="60-79"
                android:textColor="#000000"
                android:textSize="14sp"
                app:layout_column="1"
                app:layout_row="1" />

            <TextView
                android:id="@+id/desired"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="6dp"
                android:text="Desired"
                android:textColor="#000000"
                android:textSize="14sp"
                app:layout_column="1"
                app:layout_row="1" />

        </TableRow>

        <TableRow>

            <TextView
                android:id="@+id/colour3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="6dp"
                android:background="#e0f3f8"
                android:text="           "
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_column="0"
                app:layout_row="1" />

            <TextView
                android:id="@+id/range5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="6dp"
                android:text="120-139"
                android:textColor="#000000"
                android:textSize="14sp"
                app:layout_column="1"
                app:layout_row="1" />

            <TextView
                android:id="@+id/range6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="6dp"
                android:text="80-89"
                android:textColor="#000000"
                android:textSize="14sp"
                app:layout_column="1"
                app:layout_row="1" />

            <TextView
                android:id="@+id/prehypertension"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="6dp"
                android:text="Prehypertension"
                android:textColor="#000000"
                android:textSize="14sp"
                app:layout_column="1"
                app:layout_row="1" />

        </TableRow>

        <TableRow>

            <TextView
                android:id="@+id/colour4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="6dp"
                android:background="#fee090"
                android:text="           "
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_column="0"
                app:layout_row="4" />

            <TextView
                android:id="@+id/range7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="6dp"
                android:text="140-159"
                android:textColor="#000000"
                android:textSize="14sp"
                app:layout_column="1"
                app:layout_row="1" />

            <TextView
                android:id="@+id/range8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="6dp"
                android:text="90-99"
                android:textColor="#000000"
                android:textSize="14sp"
                app:layout_column="1"
                app:layout_row="1" />

            <TextView
                android:id="@+id/stage1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="6dp"
                android:text="Stage 1 hypertension"
                android:textColor="#000000"
                android:textSize="14sp"
                app:layout_column="1"
                app:layout_row="4" />

        </TableRow>

        <TableRow>

            <TextView
                android:id="@+id/colour5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="6dp"
                android:background="#fc8d59"
                android:text="           "
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_column="0"
                app:layout_row="5" />

            <TextView
                android:id="@+id/range9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="6dp"
                android:text="160-179"
                android:textColor="#000000"
                android:textSize="14sp"
                app:layout_column="1"
                app:layout_row="1" />

            <TextView
                android:id="@+id/range10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="6dp"
                android:text="100-109"
                android:textColor="#000000"
                android:textSize="14sp"
                app:layout_column="1"
                app:layout_row="1" />

            <TextView
                android:id="@+id/stage2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="6dp"
                android:text="Stage 2 hypertension"
                android:textColor="#000000"
                android:textSize="14sp"
                app:layout_column="1"
                app:layout_row="5" />

        </TableRow>

        <TableRow>

            <TextView
                android:id="@+id/colour6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="6dp"
                android:background="#d73027"
                android:text="           "
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_column="0"
                app:layout_row="6" />

            <TextView
                android:id="@+id/range11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="6dp"
                android:text="&gt;=180"
                android:textColor="#000000"
                android:textSize="14sp"
                app:layout_column="1"
                app:layout_row="1" />

            <TextView
                android:id="@+id/range12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="6dp"
                android:text="&gt;=110"
                android:textColor="#000000"
                android:textSize="14sp"
                app:layout_column="1"
                app:layout_row="1" />

            <TextView
                android:id="@+id/hypertensive_emerg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="6dp"
                android:text="Hypertensive emergency*"
                android:textColor="#000000"
                android:textSize="14sp"
                app:layout_column="1"
                app:layout_row="6" />

        </TableRow>

    </TableLayout>

</androidx.constraintlayout.widget.ConstraintLayout>