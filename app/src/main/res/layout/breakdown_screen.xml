<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F6F5F5">

    <TextView
        android:id="@+id/breakdown"
        android:layout_width="250dp"
        android:layout_height="48dp"
        android:layout_marginStart="74dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/rasa_bold"
        android:gravity="left"
        android:text="BREAKDOWN"
        android:textColor="#000000"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="410dp"
        android:layout_height="30dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/breakdown">

        <com.google.android.material.chip.Chip
            android:id="@+id/chip1_card"
            style="@style/Widget.MaterialComponents.Chip.Choice"
            android:layout_width="120dp"
            android:layout_height="30dp"
            android:checkable="true"
            android:text="Sodium"
            android:textAlignment="center"
            android:textColor="@color/chip_text_color"
            android:textSize="16dp"
            app:checkedIconEnabled="true"
            app:checkedIconTint="@color/white"
            app:checkedIconVisible="true"
            app:chipBackgroundColor="@color/chip_background_color"
            app:chipEndPadding="10dp"
            app:chipIconVisible="true"
            app:chipMinHeight="30dp"
            app:chipMinTouchTargetSize="20dp"
            app:chipStartPadding="10dp" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chip2_card"
            style="@style/Widget.MaterialComponents.Chip.Choice"
            android:layout_width="110dp"
            android:layout_height="30dp"
            android:checkable="true"
            android:text="Stress"
            android:textAlignment="center"
            android:textColor="@color/chip_text_color"
            android:textSize="16dp"
            app:checkedIconEnabled="true"
            app:checkedIconTint="@color/white"
            app:checkedIconVisible="true"
            app:chipBackgroundColor="@color/chip_background_color"
            app:chipEndPadding="10dp"
            app:chipIconVisible="true"
            app:chipMinHeight="30dp"
            app:chipMinTouchTargetSize="30dp"
            app:chipStartPadding="10dp" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chip3_card"
            style="@style/Widget.MaterialComponents.Chip.Choice"
            android:layout_width="170dp"
            android:layout_height="30dp"
            android:checkable="true"
            android:text="Heavy Exercise"
            android:textAlignment="center"
            android:textColor="@color/chip_text_color"
            android:textSize="16dp"
            app:checkedIconEnabled="true"
            app:checkedIconTint="@color/white"
            app:checkedIconVisible="true"
            app:chipBackgroundColor="@color/chip_background_color"
            app:chipEndPadding="10dp"
            app:chipIconVisible="true"
            app:chipMinHeight="30dp"
            app:chipMinTouchTargetSize="30dp"
            app:chipStartPadding="10dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="410dp"
        android:layout_height="720dp"
        android:layout_marginTop="5dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2">

        <include
            android:id="@+id/graph"
            layout="@layout/graph"
            android:layout_width="fill_parent"
            android:layout_height="422dp" />

        <include
            android:id="@+id/bp_level_table"
            layout="@layout/bp_level_table"
            android:layout_width="fill_parent"
            android:layout_height="210dp"
            android:layout_gravity="bottom" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/finish_button"
                    android:layout_width="140dp"
                    android:layout_height="50dp"
                    android:layout_marginEnd="20dp"
                    android:backgroundTint="#9B64FF"
                    android:text="Finish"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/hypertensive_emerg"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_gravity="left"
                    android:layout_marginStart="15dp"
                    android:text="*as stated by the \n American Heart Association"
                    android:textColor="#000000"
                    android:textSize="12sp"
                    app:layout_column="1"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_row="6" />
            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/back_button"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="10dp"
        android:backgroundTint="#F6F5F5"
        app:icon="@drawable/ic_baseline_arrow_back_ios_24"
        app:iconTint="#000000"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>